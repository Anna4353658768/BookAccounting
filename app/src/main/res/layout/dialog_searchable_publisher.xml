<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_publisher_item"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/dialog_search_publisher_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="@string/dialog_search"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/dialog_search"
        android:inputType="text"
        android:padding="12dp"
        android:singleLine="true" />

    <ListView
        android:id="@+id/dialog_search_publisher_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>